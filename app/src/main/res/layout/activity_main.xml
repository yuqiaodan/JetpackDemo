<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_login_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录例子" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_play_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="播放界面" />

        <Button
            android:id="@+id/btn_play_flow_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放界面（小）" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_music_list_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音乐列表" />





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:text="官方LifeCycle+LiveData例子" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_taobao"
        android:layout_width="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:text="MVVM案例-淘宝 " />
</LinearLayout>